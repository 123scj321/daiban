/* pages/server/message-first/index.wxss */
page{
  background: #f1f2f4;
}
/* 标题 */
.main-title{
  width:700rpx;
  margin:30rpx auto;
  font-size:32rpx;
  color:#0090ec;
}
/* 留言列表 */
.resume{
  width:100%;
  margin-top:10rpx;
}
.resume .list-container{
  width:100%;
}
.resume .list-container .list-item-container{
  width:100%;
  background: #fff;
  margin-bottom: 20rpx;
}
.resume .list-container .list-item{
  width:700rpx;
  display: flex;
  margin:20rpx auto;
  justify-content: space-between;
  align-items: center;
  
}
.resume .list-container .list-item .left{
  width:138rpx;
  height: 138rpx;
  align-items: center;
  box-shadow: 0rpx 0rpx 20rpx #0090ec;
  border-radius: 50%;
}
.resume .list-container .list-item .left image{
  width:128rpx;
  height: 128rpx;
  margin:5rpx 5rpx;
}
.resume .list-container .list-item .center{
  margin-left:20rpx;
  width:430rpx;
}
.resume .list-container .list-item .center .title{
  font-size:32rpx;
  color:#333;
  font-weight: bold;
  padding-bottom:10rpx;
}
.resume .list-container .list-item .center .subtitle{
  /* width:430rpx; */
  font-size:28rpx;
  color:#888;
  padding:0;
  
  padding-bottom:10rpx;
}

.resume .list-container .list-item .center .sign-container{
  width:100%;
  display: flex;
  border-radius: 5rpx;
  margin-top:20rpx;
  align-items: center;
  font-size:28rpx;
  margin-right: 10rpx;
  color:#0090ec;
}
.resume .list-container .list-item .center .sign-container text{
  display: block;
  font-size:28rpx;
  color:#0090ec;
}
.resume .list-container .list-item .center .sign-container image{
  width:11rpx;
  height: 18rpx;
}
.resume .list-container .list-item .right{
  width:60rpx;
}
.resume .list-container .list-item .right image{
  width:60rpx;
  height: 60rpx;
}
.border-top{
  border-top:2rpx solid #ddd;
}