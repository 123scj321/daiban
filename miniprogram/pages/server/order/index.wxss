/* pages/server/order/index.wxss */
page{
  background: #f1f2f4;
  font-family: "Adobe";
}
/* 面板 */
.switch-panel{
  width: 100%;
  height: 100%;
  position: relative;
  font-size: 30rpx;
}
.switch-panel-title{
  background: #FFF;
  color: #333;
  display: flex;
  height: 8vh;
  justify-content: space-around;
  line-height: 80rpx;
}
.switch-panel-title .active{
  border-bottom: 1rpx solid #0090ec;
  color: #0090ec;
}
.switch-panel-title-item{
  flex: 0.3;
  text-align: center;
}
.switch-panel-swiper{
  width: 100%;
  height: 92vh;
}
.switch-panel-content{
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
}
/* 订单模块  */
.order-module{
  background: #fff;
  border-radius: 10rpx;
  width: 90%;
  margin: 20rpx auto;
  padding: 10rpx 2.5%;
  box-shadow: 0 0 10rpx #ccc;
  overflow: hidden;
}
.order-module .inline{
  display: flex;
  font-size: 28rpx;
  padding: 15rpx 0;
}
.title{
  font-weight: bold;
}
.order-module .label{
  color: #111;min-width: 160rpx;
}
.order-module .info{
  color: #666;
}
.none{
  display: none;
}

/* 推荐企业 */
.resume{
  width:100%;
  background: #fff;
  margin-top:10rpx;
}
.resume .title{
  width:700rpx;
  margin:0rpx auto;
  align-items: center;
  display: flex;
  padding-top:20rpx;
  padding-bottom:20rpx;
  justify-content: space-between;
}
.resume .title text{
  font-size:32rpx;font-weight: bold;color:#333;
}
.resume .title image{
  width:16rpx;
  height: 30rpx;
}
.resume .list-container{
  width:100%;
}
.resume .list-container .list-item{
  width:700rpx;
  display: flex;
  margin:20rpx auto;
}
.resume .list-container .list-item .left{
  width:100rpx;
  height: 100rpx;
  align-items: center;
  border:2rpx solid #f2f2f2;
}
.resume .list-container .list-item .left image{
  width:90rpx;
  height: 90rpx;
  margin:5rpx 5rpx;
}
.resume .list-container .list-item .right{
  /* width:550rpx; */
  margin-left:20rpx;
}
.resume .list-container .list-item .right .title{
  font-size:28rpx;
  color:#333;
  font-weight: bold;
  padding:0;
}
.resume .list-container .list-item .right .subtitle{
  font-size:28rpx;
  margin-top:20rpx;
  color:#888;
  padding:0;
  margin-bottom:20rpx;
}
.resume .list-container .list-item .right .sign-container{
  width:100%;
  display: flex;
  border-radius: 5rpx;
  margin-top:20rpx;
  align-items: center;
}
.resume .list-container .list-item .right .sign-container text{
  display: block;
  font-size:28rpx;
  padding:2rpx 10rpx;
  margin-right: 10rpx;
  color:#555555;
}
.resume .list-container .list-item .right .sign-container image{
  width:11rpx;
  height: 18rpx;
}
/* 底部布局 */
.footer{
  width:100%;
  position:fixed;
  bottom:0;
  height: 100rpx;
 background: #fff;
 border-top:2rpx solid #dddddd;
  display: flex;
  justify-content: space-between;
}
.footer .item{
  width:33.33%;
  text-align: center;
}
.footer .item button{
  width:33.33%;
  text-align: center;
  background: #fff;
  padding:0rpx;
  
}
.footer .item button::after{
  border: none;
}
.footer .item image{
  /* margin-top:10rpx; */
  width:42rpx;
  height: 42rpx;
  /* margin-bottom:-20rpx; */
}
.footer .item text{
  margin-top:-43rpx;
  display: block;
  font-size:22rpx;
  color:#555555;
}
.footer button .active{color:#0090ec;}

.footer .active button::after{
  border:none;
}
#fixed-top{
  position: fixed;
  top:-22rpx;
  width:100%;
  height:112rpx;
  background:#fff;
  z-index:1000000;
}
#fixed-top .search-container{
  margin:24rpx auto;
}


.border-top{
  border-top:2rpx solid #ddd;
}