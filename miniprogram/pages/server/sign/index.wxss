/* pages/server/sign/index.wxss */
page{
  background: #F2F2F2;
}
.page-content{
  padding-bottom: 0rpx;
}
/* 头像  */
.sign-in-module{
  height: 400rpx;
  overflow: hidden;
}
.sign-in-btn,.is-sign-btn{
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
  margin: 78rpx auto 20rpx;
  line-height: 200rpx;
  color: #ff1531;
  font-size: 38rpx;
  background: none;
  text-align: center;
}
.is-sign-btn{
  line-height: normal;
  overflow: hidden;
  color: #15AA13;
  font-size: 32rpx;
}
.is-sign-btn view{
  line-height: 60rpx;
  margin:10rpx 20rpx 0;
  padding: 10rpx 0;
}
.is-sign-btn view:first-child{
  border-bottom: 1rpx solid #eee;
}
.sign-in-tip{
  color: #FFF;
  text-align: center;
  font-size: 28rpx;
  line-height: 100rpx;
}

/* 带标题面板  */
.sub-title-panel{
  width: 100%;
  background: #FFF;
  margin-bottom: 20rpx;
  /* margin: 20rpx 0; */
}
.sub-title-panel .title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  color: #070707;
}
.sub-title-panel .title .icon{
  width: 36rpx;
  height: 33rpx;
  margin-right: 20rpx;
  position: relative;
  top: 5rpx;
}
.sub-title-panel .content{
  overflow: hidden;
}

.calendar-module{
  font-size: 26rpx;
  color: #070707;
}
.calendar-head{
  width: 700rpx;
  background: url(http://127.0.0.1/img/server/vip-bg.png) top center;
  background-size: 100% 100%;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  height: 100rpx;
  padding:0 25rpx;
}
.calendar-head .center{
  width:650rpx;
  text-align: center;
  padding: 30rpx 0;
  color:#FFF;
  font-size:34rpx;
}
.calendar-head .left,.calendar-head .right{
  
  
  padding: 30rpx 0;
  color:#FFF;
  font-size:34rpx;
}
.calendar-head .left image{
  width: 15rpx;
  height: 24rpx;
}
.calendar-head .right image{
  width: 15rpx;
  height: 24rpx;
}
.calendar-body{
  padding: 20rpx 0;
  width:700rpx;
  margin:0 auto
}
.calendar-title{
  overflow: hidden;
  margin-bottom: 30rpx;
  font-size:32rpx;
}
.calendar-title-item{
  float: left;
  width: 14.28%;
  text-align: center;
}

.calendar-time{
  overflow: hidden;
  font-size:32rpx;
}
.calendar-time-item{
  float: left;
  width: 14.28%;
  text-align: center;
  margin: 20rpx 0;
  position: relative;
}
.calendar-time-item .flag{
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  background: #0C81FE;
  margin: 0 auto;
  position: absolute;
  left: 47rpx;
}
.calendar-time-item-img{
  width:46rpx;
  height: 41rpx;
}
.page-tip{
  color: #333333;
  font-size: 28rpx;
  padding-left:25rpx;
}
.page-tip text{
  color:#0090ec;
}
/* 签到图标 */
.sign-btn{
  width:450rpx;
  height: 80rpx;
  margin:30rpx auto;
  padding-bottom:30rpx;
}
.sign-btn button{
  width:450rpx;
  height: 80rpx;
  font-size:32rpx;

  color:#fff;
  background: linear-gradient(to bottom,#4fb5f7,#0191ec);
  margin:30rpx auto;
}
.sign-btn .out-sign{
  width:450rpx;
  height: 80rpx;
  font-size:32rpx;
  color:#fff;
  background: #ddd;
  margin:30rpx auto;
}
.sign-btn button::after{
  border:none;
}
/* 签到奖品 */
.teacher-abstract{
  width:750rpx;
  display: flex;
  font-size:33rpx;
  color:#353535;
  font-weight: bold;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.teacher-abstract icon{
  display: block;
  width:8rpx;
  height: 45rpx;
  background: #e7b467;
  margin-right: 20rpx;
  border-radius: 16rpx;
}
/* 签到列表 */
.avatar-container{
  width:660rpx;
  margin:30rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom:30rpx;
}
.avatar-container .left{
  width:120rpx;
}
.avatar-container .left image{
  width:81rpx;
  height: 81rpx;
  border-radius: 50%;
}
.avatar-container .center{
  width:430rpx;
  font-size:24rpx;
}
.avatar-container .center .nickname{
  font-size:40rpx;
  color:#333;
  font-weight: bold;
}
.avatar-container .center .image-container{
  width:100%;
  display: flex;
  justify-content: space-between;
  margin-top:10rpx;
}
.avatar-container .center .image-container .classic{
  font-size:24rpx;
  color:#888;
}
.avatar-container .center .image-container .classic image{
  width:28rpx;
  height: 28rpx;
}
.avatar-container .right{
  width:128rpx;
}
.avatar-container .right button{
  width:118rpx;
  background: none;
  border-radius: 8rpx;
  font-size:28rpx;
  border:2rpx solid #e7b467;
  color:#e7b467;
  height: 45rpx;
  line-height: 45rpx;
}
.avatar-container .right button.active{
  width:118rpx;
  background: none;
  border-radius: 8rpx;
  font-size:28rpx;
  border:2rpx solid #888;
  color:#888;
  height: 45rpx;
  line-height: 45rpx;
}
.avatar-container .right button::after{
  border:none;
}
