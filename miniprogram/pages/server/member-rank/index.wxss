/* pages/server/member-rank/index.wxss */
page{
  background: #f1f2f4;
}
.user-face-module{
  overflow: hidden;
  background: url(http://127.0.0.1/img/server/member-rank-bg.png) top center;
  background-size: 100% 100%;
  height: 467rpx;
  position: relative;
}
.user-face-module .value-container{
  position: absolute;
  width:500rpx;
  top:20rpx;
  left:25rpx;
}
.user-face-module .value-container .item{
  font-size:26rpx;
  color:#fff;
  margin-bottom:5rpx;
}
.user-face-module .value-container .active{
  font-size:26rpx;
  color:#e7b467;
  margin-bottom:5rpx;
}
.user-face-module .bar-container{
  position: relative;
  width:700rpx;
  height: 450rpx;
  display: flex;
  margin:0 auto;
  justify-content: space-between;
}
.user-face-module .bar-container .item{
  position: absolute;
  bottom:0rpx;
  width:100rpx;
  text-align: center;
  overflow: hidden;
  color:#fff;
  font-size:28rpx;
}
.user-face-module .bar-container .item text{
  display: block;
}
.user-face-module .bar-container .item icon{
  display: block;
  width:15rpx;
  height: 100rpx;
  border-radius: 30rpx;
  margin:10rpx auto;
  background: linear-gradient(to bottom,#d5bb95,#d39c4a);
}
.user-face-module .bar-container .c1{left:0rpx;}
.user-face-module .bar-container .c2{left:116rpx;}
.user-face-module .bar-container .c3{left:232rpx;}
.user-face-module .bar-container .c4{left:348rpx;}
.user-face-module .bar-container .c5{left:464rpx;}
.user-face-module .bar-container .c6{left:580rpx;}
/* 成长值 */
.question-container{
  background: #fff;
  margin:30rpx auto;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.teacher-abstract{
  width:750rpx;
  display: flex;
  font-size:30rpx;
  color:#353535;
  font-weight: bold;
  padding-bottom:20rpx;
}
.teacher-abstract icon{
  display: block;
  width:8rpx;
  height: 45rpx;
  background: #e8b468;
  margin-right: 8rpx;
  border-radius: 16rpx;
}
.main-text{
  text-indent: 1.5rem;
  font-size:28rpx;
  color:#555555;
  display: flex;
  margin:30rpx auto;
}

.text{
  width:700rpx;
  margin:20rpx auto;
  font-size:28rpx;
  color:#555555;
  display: flex;
}
.text text{
  display: block;
  width:30rpx;
}
.title{
  font-size:32rpx;
  font-weight: 600;
}
/* 我的成长值 */
.my-grow{
  width:700rpx;
  margin:30rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.my-grow .left{
  width:530rpx;
  font-size:30rpx;
  color:#333333;
}
.my-grow .left text:last-child{
  display: block;
  width:530rpx;
  font-size:24rpx;
  color:#888;
}
.my-grow .right{
  width:170rpx;
  text-align: right;
  font-size:28rpx;
  color:#e7b467;
}
.border-top{
  border-top:2rpx solid #ddd;
}