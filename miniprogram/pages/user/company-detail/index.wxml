<!-- 底部导航 -->
<view style='height:108rpx;'></view>
<view class='footer'>
  <form report-submit='true' class='item' bindtap='handler_next_page' data-url="../class-look/index">
    <button bindtap='collect_btn'>
      <block wx:if="{{!collect}}">
        <image src="{{imgUrl}}collect-01.png" style="width:38rpx;height:37rpx;"></image>
        <text>收藏</text>
      </block>
