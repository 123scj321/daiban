    <button bindtap='callPhoneHandler' data-phone="13212341234">
      <text>联系商家</text>
    </button>
  </form>
</view>



<!-- 留言 （遮罩层） -->
<view class='appointment-plan' hidden='{{showAppointment}}' style='left:{{appointment_left}}rpx'>
  <view class='appointment-plan-container'>
      <!-- 标题 -->
      <view class='title-top'>
        <text class='appointment-title'>在线留言</text>
        <text class='appointment-subtitle'>（3小时内商家会联系您）</text>
      </view>
      <image src="http://xyds.4hl.cn/xyds/uploads/otherimg/index/icon-28.png" class='cancleHandler' bindtap='cancleAppointment'></image>
      <!-- 上面部分 -->
      <view class='module-container'>
        <!-- 昵称 -->
        <view class='module-list-item'>
          <view class='input-container'>
            <view class='label'> 姓名:</view>
            <view class='input-container'>
              <input placeholder='怎么称呼您' bindchange='get_name'  value="{{name}}"></input>
            </view>
          </view>
        </view>
        <!-- 电话 -->
        <view class='module-list-item'>
          <view class='input-container'>
            <view class='label'>联系方式：</view>
            <view class='input-container'>
              <input placeholder='请您输入电话号码，方便我们联系您' bindchange="get_phone" value="{{phone}}"></input>
              
            </view>
          </view>
        </view>
        <!-- 验证码 -->
        <view class='module-list-item'>
          <view class='input-container'>
            <view class='label'>验证码：</view>
            <view class='input-container-yanzhengma'>
              <input placeholder='请输入验证码' bindchange="verificationinput" value="{{verificationcode}}"></input>
              <block wx:if="{{gettingCode}}">
                <button class='yanzhengma' bindtap='sendcode'>获取验证码</button>
              </block>
              <block wx:else>
                <button class='active'>{{sendtxt}}</button>
              </block>
            </view>
          </view>
        </view>
        <!-- 意向城市 -->
        <view class='module-list-item'>
          <view class='input-container'>
            <view class='label'>意向城市：</view>
            <view class='input-container'>
              <input placeholder='西安' bindchange="get_address" value="{{address}}"></input>
            </view>
          </view>
        </view>
      </view>
      <view class='prompit'>
        <text>我们平台不会泄露您的个人信息，请您放心填写</text>
      </view>
       <!-- 下面部分 -->
      <view class='module-container'>
        <!-- 代办项目 -->
        <view class='module-list-item'>
          <view class='input-container'>
            <view class='label'> 代办项目:</view>
            <view class='list-item'>
              <block wx:for="{{agent_project}}" wx:key="{{agent_project}}" wx:index="index">
                <text class='{{item.status?"active":"list-item-btn"}}' bindtap='choose_project' data-id="{{index}}">{{item.title}}</text>
              </block>
            </view>
          </view>
        </view>
        <!-- 留言内容 -->
        <view class='module-list-item'>
          <view class='input-container'>
            <view class='label'>留言内容：</view>
            <view class='input-container'>
              <input placeholder='请简要说明您的需求（选填）' value="{{message}}" bindchange="get_message"></input>
            </view>
          </view>
        </view>
      </view>
      <view class='pay-number'>
        <button bindtap='submit_btn'>提交</button>
      </view>
  </view>
</view>


